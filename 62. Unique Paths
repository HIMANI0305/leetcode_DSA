class Solution {
    public int uniquePaths(int m, int n) {
        int N = m + n - 2; // total moves
        int k = Math.min(m - 1, n - 1); // choose smaller for efficiency
        long res = 1; // use long to prevent overflow

        for (int i = 1; i <= k; i++) {
            res = res * (N - k + i) / i;
        }

        return (int) res;
    }
}
